{
  "manifest_version": 3,
  "name": "IITG AutoLogin V3",
  "version": "1.3",
  "description": "Automatically logs you into the IITG network.",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://agnigarh.iitg.ac.in:1442/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "64": "icon64.png"
    },
    "default_title": "AutoLogin"
  },
  "options_page": "options.html",
  "icons": { "128": "icon.png" }
}
